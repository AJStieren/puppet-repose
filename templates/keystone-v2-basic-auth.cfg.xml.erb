<?xml version="1.0" encoding="UTF-8"?>

<keystone-v2-basic-auth
    xmlns="http://docs.openrepose.org/repose/keystone-v2-basic-auth/v1.0"
    keystone-v2-service-uri="<%= @identity_service_url %>"
<%- if ! @token_cache_timeout.nil? -%>
    token-cache-timeout-millis="<%= @token_cache_timeout %>"
<%- end -%>
<%- if ! @connection_pool_id.nil? -%>
    connection-pool-id="<%= @connection_pool_id %>"
<%- end -%>
<%- if ! @secret_type.nil? -%>
    secret-type="<%= @secret_type %>"
<%- end -%>
    >
<%- if ((! @delegating.nil?) and @delegating) or (! @delegating_quality.nil?) -%>
    <delegating<%- if ! @delegating_quality.nil? -%> quality="<%= @delegating_quality %>"<%- end -%>/>
<%- end -%>
</keystone-v2-basic-auth>

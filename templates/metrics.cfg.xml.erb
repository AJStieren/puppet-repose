<metrics xmlns="http://docs.rackspacecloud.com/repose/metrics/v1.0" enabled="<%= server[ 'enabled' ] %>">
    <graphite>
    <%- graphite_servers.each do | server | -%>
        <server host="<%= server[ 'host' ] %>"
                port="<%= server[ 'port' ] %>"
                period="<%= server[ 'period' ] %>"
                prefix="<%= server[ 'prefix' ] %>" />
    <%- end -%>
    </graphite>
</metrics>